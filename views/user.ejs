<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>List of Users</h2>
            <form method="post" action="/">
                <button type="submit" class="btn btn-primary mb-2">Add New User</button>
            </form>
            <% if (msg.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Balance</th>
                    <th scope="col">Deposit</th>
                    <th scope="col">Withdraw</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    User data still empty! <br>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% users.forEach((user) => { %>
                        <tr>
                            <td><%= user._id %></td>
                            <td><%= user.balance %></td>
                            <td><a href="/deposit/<%= user._id %> " class="btn btn-success badge rounded-pill"><i class="bi bi-wallet"></i> Deposit</a></td>
                            <td><a href="/withdraw/<%= user._id %> " class="btn btn-primary badge rounded-pill"><i class="bi bi-arrow-down-circle-fill"></i> Withdraw</a></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>